<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:ForumClient" x:Class="ForumClient.ForumPage" Title="Forum">
	<ContentPage.Content>
		<ScrollView>
			<ScrollView.Content>
				<ListView x:Name="threadList" VerticalOptions="Start" SeparatorVisibility="None" ItemSelected="OnThreadSelected">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<StackLayout>
									<Label Text="{Binding Title}" LineBreakMode="TailTruncation" />
									<StackLayout Orientation="Horizontal">
										<Label Text="{Binding PostInfo}" HorizontalOptions="Start" FontSize="10" />
										<Label Text="{Binding PageInfo}" HorizontalOptions="CenterAndExpand" FontSize="10" />
										<Label Text="{Binding LastPostInfo}" HorizontalOptions="End" FontSize="10" />
									</StackLayout>
								</StackLayout>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
			</ScrollView.Content>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>