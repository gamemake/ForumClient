<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:ForumClient" x:Class="ForumClient.ForumPage" Title="Forum"  Padding="5,0">
	<ContentPage.Content>
		<ScrollView>
			<ScrollView.Content>
				<ListView x:Name="threadList" VerticalOptions="Start" ItemSelected="OnThreadSelected" SeparatorVisibility="None">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<StackLayout Spacing="0">
									<Label Text="{Binding Title}" LineBreakMode="TailTruncation" VerticalTextAlignment="Center" VerticalOptions="CenterAndExpand" />
									<StackLayout Orientation="Horizontal" Spacing="0" VerticalOptions="End">
										<Label Text="{Binding PostInfo}" HorizontalOptions="Start" FontSize="10" />
										<Label Text="{Binding PageInfo}" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand" FontSize="10" />
										<Label Text="{Binding LastPostInfo}" HorizontalOptions="End" FontSize="10" />
									</StackLayout>
								</StackLayout>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
			</ScrollView.Content>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>